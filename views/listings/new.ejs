<% layout("/layouts/boilerplate")%>

<div class="new-listing-page">
  <h3 class="new-listing-title">Create a New Listing</h3>

  <div class="new-listing-form">
    <form method="POST" action="/listings" novalidate class="needs-validation">
      
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input id="title" 
               name="listing[title]" 
               placeholder="Enter an attractive title"
               type="text"
               class="form-control"
               required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please provide a title.</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description"
                  name="listing[description]"
                  placeholder="Write a detailed description of your place"
                  class="form-control"
                  required
        ></textarea>
        <div class="invalid-feedback">Please provide a description.</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input id="image"
               name="listing[image][url]"
               type="text"
               placeholder="Enter image URL"
               class="form-control"
               required
        />
        <div class="invalid-feedback">Please provide an image URL.</div>
      </div>

      <div class="row mb-3">
        <div class="col-md-4">
          <label for="price" class="form-label">Price (per night)</label>
          <div class="input-group">
            <span class="input-group-text">â‚¹</span>
            <input id="price"
                   name="listing[price]"
                   placeholder="3500"
                   type="number"
                   class="form-control"
                   required
            />
          </div>
          <div class="invalid-feedback">Please provide a valid price.</div>
        </div>

        <div class="col-md-8">
          <label for="location" class="form-label">Location</label>
          <input id="location"
                 name="listing[location]"
                 placeholder="Enter city or area"
                 type="text"
                 class="form-control"
                 required
          />
          <div class="invalid-feedback">Please provide a location.</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input id="country"
               name="listing[country]"
               placeholder="Enter country name"
               type="text"
               class="form-control"
               required
        />
        <div class="invalid-feedback">Please provide a country name.</div>
      </div>

      <div class="mb-4 category-dropdown">
        <label for="category" class="form-label">Category</label>
        <select name="listing[category]" id="category" class="form-select" required>
          <option value="">Select a category</option>
          <option value="Trending">Trending</option>
          <option value="Rooms">Rooms</option>
          <option value="Iconic Cities">Iconic Cities</option>
          <option value="Mountains">Mountain Views</option>
          <option value="Castles">Castles</option>
          <option value="Camping">Camping</option>
          <option value="Farms">Farms</option>
          <option value="Arctic">Arctic</option>
          <option value="Beach">Beach</option>
        </select>
        <div class="invalid-feedback">Please select a category.</div>
      </div>

      <button class="submit-btn btn">Create Listing</button>
    </form>
  </div>
</div>
